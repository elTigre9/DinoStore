@model PetDinos.Pages.Dinosaurs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dinosaur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dinosaur.DID" />
            <div class="form-group">
                <label asp-for="Dinosaur.DName" class="control-label"></label>
                <input asp-for="Dinosaur.DName" class="form-control" />
                <span asp-validation-for="Dinosaur.DName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.DType" class="control-label"></label>
                <input asp-for="Dinosaur.DType" class="form-control" />
                <span asp-validation-for="Dinosaur.DType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.DOB" class="control-label"></label>
                <input asp-for="Dinosaur.DOB" class="form-control" />
                <span asp-validation-for="Dinosaur.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.PSID" class="control-label"></label>
                <select asp-for="Dinosaur.PSID" class="form-control" asp-items="ViewBag.PSID"></select>
                <span asp-validation-for="Dinosaur.PSID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
